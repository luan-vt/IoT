<body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">
    <header class="app-header navbar">
        <button class="navbar-toggler sidebar-toggler d-lg-none mr-auto" type="button" data-toggle="sidebar-show">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#">
        	<div>IoT</div>
        </a>
        <button class="navbar-toggler sidebar-toggler d-md-down-none" type="button" data-toggle="sidebar-lg-show">
            <span class="navbar-toggler-icon"></span>
        </button>
        <ul class="nav navbar-nav ml-auto">
        	<% if(typeof locals.user == 'object' && locals.user){ %>
		        <li class="nav-item dropdown">
		            <a class="nav-link nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
		                Welcome <strong><div><%= locals.user.name %></div></strong>
		            </a>
		            <div class="dropdown-menu dropdown-menu-right">
		                <div class="dropdown-header text-center">
		                    <strong>Tài khoản</strong>
		                </div>
		                <a class="dropdown-item" href="/users">
		                    Thông tin</a>
		                <a class="dropdown-item" href="/users/signout">
		                    Đăng xuất</a>
		            </div>
		        </li>
            <% } %>
        </ul>
    </header>
    <div class="app-body">
        <div class="sidebar">
            <nav class="sidebar-nav">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="nav-icon icon-speedometer"></i> Mượn - trả thiết bị
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/reg-device">
                            <i class="nav-icon icon-speedometer"></i> Đăng ký mượn thiết bị
                        </a>
                    </li>
<!--                     <li class="nav-title">Theme</li>
 -->                </ul>
            </nav>
            <button class="sidebar-minimizer brand-minimizer" type="button"></button>
        </div>
        <main class="main">

            <ol class="breadcrumb">
                <li class="breadcrumb-item">Trang chủ</li>
            </ol>
            <div class="container-fluid">
                <div id="ui-view">
                	<% if (typeof view == 'string' && view) {%>
                		<%- include(view) %>
                	<% }%>
                </div>
            </div>
        </main>
    </div>
    <footer class="app-footer">
        <div>
            Nhóm 5
            <span>© Công nghệ IoT hiện đại</span>
        </div>
    </footer>


